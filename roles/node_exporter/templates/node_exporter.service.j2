[Unit]
Description=Prometheus node exporter
After=local-fs.target network-online.target network.target
Wants=local-fs.target network-online.target network.target

[Service]
User=prometheus
Restart=on-failure
ExecStart={{ prometheus_node_exporter_install_directory }}/node_exporter-{{ prometheus_node_exporter_version}}.{{ prometheus_platform }}/node_exporter
Type=simple

[Install]
WantedBy=multi-user.target